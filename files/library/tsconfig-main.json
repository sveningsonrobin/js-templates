{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["DOM", "ES2019"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "~": ["src"],
            "~/*": ["src/*"]
        },
        "outDir": "dist"
    },
    "include": ["src/**/*.ts", "tests/**/*.test.ts"],
    "exclude": ["node_modules"]
}
