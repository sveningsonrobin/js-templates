{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["DOM", "ES2019"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "jsx": "react",
        "sourceMap": true,
        "downlevelIteration": true,
        "outDir": "./dist/",
        "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
